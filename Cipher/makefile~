CC = g++
CFLAGS = -Wall -g -O3
LDFLAGS = -lm

loe: linkedList.o command.o terminal.o file.o cipher.o encryption.o decryption.o xor.o tea.o xtea.o xxtea.o hash.o djb2.o sdbm.o functions.o main.o
	${CC} ${CFLAGS} linkedList.o command.o terminal.o file.o cipher.o encryption.o decryption.o xor.o tea.o xtea.o xxtea.o hash.o djb2.o sdbm.o functions.o main.o ${LDFLAGS} -o loe

main.o: header.h 
	${CC} ${CFLAGS} -c main.cpp

linkedList.o: linkedList.h
	${CC} ${CFLAGS} -c linkedList.cpp

command.o: command.h
	$(CC) ${CFLAGS} -c command.cpp

terminal.o: header.h
	${CC} ${CFLAGS} -c terminal.cpp

file.o: header.h linkedList.cpp
	${CC} ${CFLAGS} -c file.cpp

cipher.o: cipher.h
	${CC} ${CFLAGS} -c cipher.cpp

encryption.o: encryption.h
	${CC} ${CFLAGS} -c encryption.cpp

decryption.o: decryption.h
	${CC} ${CFLAGS} -c decryption.cpp

xor.o: ./EncryptionFunctions/xor.h
	${CC} ${CFLAGS} -c ./EncryptionFunctions/xor.cpp

tea.o: ./EncryptionFunctions/tea.h
	${CC} ${CFLAGS} -c ./EncryptionFunctions/tea.cpp

xtea.o: ./EncryptionFunctions/xtea.h
	${CC} ${CFLAGS} -c ./EncryptionFunctions/xtea.cpp

xxtea.o: ./EncryptionFunctions/xxtea.h
	${CC} ${CFLAGS} -c ./EncryptionFunctions/xxtea.cpp

hash.o: hash.h
	${CC} ${CFLAGS} -c hash.cpp

djb2.o: ./HashFunctions/djb2.h
	${CC} ${CFLAGS} -c ./HashFunctions/djb2.cpp

sdbm.o: ./HashFunctions/sdbm.h
	${CC} ${CFLAGS} -c ./HashFunctions/sdbm.cpp

functions.o: header.h terminal.cpp linkedList.cpp
	${CC} ${CFLAGS} -c functions.cpp

clean:
	rm -f *.o loe
